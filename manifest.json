{
  "manifest_version": 2,
  "name": "Svelte Chrome Plugin",
  "version": "0.001",
  "description": "",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/content/public/app/bundle.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "/content/public/popup/index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}